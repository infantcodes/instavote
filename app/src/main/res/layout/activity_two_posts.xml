<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jama.selfievselfie.TwoPosts">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout12">

                <EditText
                    android:id="@+id/editTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewImage2"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="Write a caption"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/imageViewImage2"
                    android:layout_width="160dp"
                    android:layout_height="266dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    app:srcCompat="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imageViewImage1"
                    android:layout_width="160dp"
                    android:layout_height="266dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    app:srcCompat="@color/colorPrimary" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageViewImage2"
                    android:layout_alignLeft="@+id/imageViewImage2"
                    android:layout_alignRight="@+id/imageViewImage2"
                    android:layout_alignStart="@+id/imageViewImage2"
                    android:layout_alignTop="@+id/progressBar1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:indeterminateTint="@android:color/background_light" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageViewImage1"
                    android:layout_alignLeft="@+id/imageViewImage1"
                    android:layout_alignRight="@+id/imageViewImage1"
                    android:layout_alignStart="@+id/imageViewImage1"
                    android:layout_alignTop="@+id/imageViewImage1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="119dp"
                    android:indeterminateTint="@android:color/background_light" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
