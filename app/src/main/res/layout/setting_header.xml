<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/border_bottom"
            android:text="Invite Friends"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/buttonDecline"
                tools:layout_editor_absoluteY="7dp"
                android:layout_width="167dp"
                android:layout_height="21dp"
                android:layout_alignBottom="@+id/buttonInvite"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/buttonInvite"
                android:layout_toStartOf="@+id/buttonInvite"
                android:text="Invite More Friends to get more points"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonInvite"
                style="@style/Widget.AppCompat.Button.Colored"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="6dp"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Invite"
                android:textColor="@color/cardview_light_background" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2"
            android:layout_margin="3dp"
            android:background="@drawable/border_bottom"
            android:text="Account Setting"
            android:textSize="24sp" />

    </RelativeLayout>
</LinearLayout>